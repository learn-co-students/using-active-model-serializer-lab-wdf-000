<h1>Products</h1>
<% @products.each do |product| %>
  <h3><%= product.name %></h3>
  <div id="product-<%= product.id %>"><%= truncate(product.description) %></div>
  <button class="js-more" data-id="<%= product.id %>">More Info</button>
<% end %>

<script type="text/javascript" charset="utf-8">
$(function() {
  $(".js-more").on("click", function() {
    var id = $(this).data("id");
    $.get("/products/" + id + ".json", function(data) {
      let product = data["product"];
      let inventoryText = product["inventory"] > 0 ? "Available" : "Sold Out";
      let productOrders = product["orders"];
      let descriptionText = "<p>" + product["description"] + "</p><p>" + inventoryText + "</p>";
      $("#product-" + id).html(descriptionText);
      // itterate over orders appending ul with li's
      $.each( productOrders, function(index, value) {
        let list = $("<ul>" +
                      "<li>" + this.id + "</li>" +
                      "<li>" + this.created_at + "</li>" +
                      "<li>" + this.products.map(function(obj){return obj.name}).join(", ") + "</li>" +
                    "</ul>");
        $("#product-" + id).append(list);
      });
    });
  });
});
</script>
